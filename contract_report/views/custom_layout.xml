<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <!--Bridge template-->
    <template id="custom_bridge_layout"><!-- Multicompany --><t t-if="not o and doc"><t t-set="o" t-value="doc"/></t>

            <t t-if="o and 'company_id' in o"><t t-set="company" t-value="o.company_id.sudo()"/></t><t t-if="not o or not 'company_id' in o"><t t-set="company" t-value="res_company"/></t>

            <!--call to the header template--><!-- t-call = "module_name.header template id"--><t t-call="contract_report.custom_header_layout"/><!--call to the body template-->
            <div class="article">
                <t t-raw="0"/>
            </div><!--call to the footer template-->
            <t t-call="contract_report.custom_footer_layout"/>
        </template>


        <template id="custom_header_layout">
        <div class="header">
        <div class="col-6"><strong>
            <span style="font-size:24px;">This is Custom header</span>
        </strong>

                </div>
                <div class="col-6" align="right">
                    <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="width:120px;height:100px;"/>
                <br/>
                    <span t-if="o.company_id.street" t-field="company.street"/><br/>
                    <span t-if="o.company_id.city" t-field="company.city"/><br/>
                    <span t-if="o.company_id.zip" t-field="company.zip"/>
                    <br/>
                    Tel:
                    <span t-if="o.company_id.phone" t-field="company.phone"/>
                </div>
                </div>
            </template>


        <template id="custom_footer_layout">
            <div class="footer">
        <div class="col-xs-12 pull-left">
            <span>This is our custom footer</span>
        </div>

    </div>
</template>
</data>
</odoo>
       